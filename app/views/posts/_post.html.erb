<li class='post-container'>
 	<div class='row'>
  		<div class='span4 post-title'>
  			<%= post.title %>
  		</div>
  	</div>
  
	<div class='row contacts'>
  		<div class='span2' class='post-email'>
  			<%= post.email %>
  		</div>
  		<div class='span2 post-city'>
  			<%= post.city %>
  		</div>
  		<div class='span3 post-address'>
			<%= post.address %>
		</div>
	</div>

	<div class='row post-contents'>
		
		<% if post.image.exists? %>
			<div class='post-image span2'>
				<%=link_to image_tag(post.image.url(:small)), post.image.url(:original), :popup=>['original_image', 'height=700,width=900'] %>
			</div>
		<% end %>
		
		<div class='content-text span5'><%= wrap(post.content) %></div>

	</div>
	<div>
	<span class="timestamp">
    	Posted <%= time_ago_in_words(post.created_at) %> ago.
	</span>
	</div>
    <br/>
</li> 
