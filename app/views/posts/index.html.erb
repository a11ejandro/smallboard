<h1>Listing posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>City</th>
    <th>Content</th>
    <th>Picture</th>
    <th>Email</th>
    <th>Address</th>
    <th>User</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.city %></td>
    <td><%= post.content %></td>
    <td><%= post.picture %></td>
    <td><%= post.email %></td>
    <td><%= post.address %></td>
    <td><%= post.user_id %></td>
    <td><%= post.category_id %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

