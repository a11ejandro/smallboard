<% provide(:title, @user.name) %>
<p id="notice"><%= notice %></p>
<h1><%= @user.name %></h1>
<div class='row'>
	<aside class='span4'>
		<section>
			<h1>
				<p><%= @user.name %></p>
				<p><%= @user.email %></p>
			</h1>	
		</section>
		<section>
			<%= link_to 'Edit', edit_user_path(@user) %> |
			<%= link_to 'Back', users_path %>	
		</section>
	</aside>
</div>




<div class="span8">
    <% if @user.posts.any? %>
      <h3>Posts (<%= @user.posts.count %>)</h3>
      <%= will_paginate @posts %>
      <ol class="Posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>
  </div>
</div>
